<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Ảnh món ăn -->
    <ImageView
        android:id="@+id/ivFoodImagee"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_food_placeholder"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Tên món ăn -->
    <TextView
        android:id="@+id/tvFoodNamee"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tên món"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/ivFoodImagee"
        app:layout_constraintStart_toEndOf="@id/ivFoodImagee"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Giá món ăn -->
    <TextView
        android:id="@+id/tvFoodPricee"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Giá: 100.000 đồng"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvFoodNamee"
        app:layout_constraintStart_toStartOf="@id/tvFoodNamee"
        app:layout_constraintEnd_toEndOf="@id/tvFoodNamee" />

    <!-- Icon sửa -->
    <ImageView
        android:id="@+id/ivEdit"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_edit"
    android:contentDescription="Sửa"
    android:padding="0dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>